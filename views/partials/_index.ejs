<% if (!user) {%>
<div class="alert alert-warning " role="alert">
  <h4 class="display-4 font-weight-bold mt-2 mb-4 alert-heading text-center">LOGIN or REGISTER TO UTILIZE TINYAPP</h4>
  <h4 class="font-weight-bold text-center">ITS RIGHT THERE IN CASE YOU WERE WONDERING ↗️↗️↗️</h4>
</div>
<%} else {%>
<main style="margin: 1em;"></main>
<h3 class="text-center font-weight-bold bg-info text-white mt-4 py-3 ">🗃My URLs</h3>
<table class="table table-info text-white">
  <thead>
    <tr class="bg-info">
      <th class="h4 text-center font-weight-bold pt-3" scope="col">🌿Short URL</th>
      <th class="h4 text-center font-weight-bold" scope="col">🌲Long URL</th>
      <th class="h4 text-center font-weight-bold" scope="col">🌚Edit</th>
      <th class="h4 text-center font-weight-bold" scope="col">😱Delete</th>
    </tr>
  </thead>
  <tbody>
    <% for(let url in urls) { %>
    <tr class="bg-info">
      <td class="font-weight-bold text-center"><%= url %></td>
      <td class="font-weight-bold text-center"><%= urls[url] %></td>
      <td>
        <form class="text-center" method="POST" action="/urls/<%= url %>">
          <button type="submit" class="btn btn-outline-light font-weight-bold">Edit</button>
        </form>
      </td>
      <td>
        <form class="text-center" method="POST" action="/urls/<%= url %>/delete">
          <button type="submit" class="btn btn-outline-danger font-weight-bold">Delete</button>
        </form>
      </td>
    </tr>
    <% } %>
  </tbody>
</table>
</main>
<% } %>

